<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InvoiceActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txtTitle"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="60dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="#d92626"
            android:text="Xác nhận thông tin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_below="@id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/txtTit"
                    android:text="Hóa đơn mua hàng :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/txtID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:id="@+id/txtCusPhone"
                android:layout_gravity="center_horizontal"
                android:textColorHint="#090909"
                android:hint="Nhập số điện thoại"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:id="@+id/txtCusAddres"
                android:layout_gravity="center_horizontal"
                android:textColorHint="#090909"
                android:hint="Nhập số địa chỉ giao hàng "
                android:layout_width="300dp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="40dp"
                    android:textColor="#ff1122"
                    android:textSize="20sp"
                    android:id="@+id/txtLabel"
                    android:text="Tổng số tiền:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/txtTongTien"
                    android:textStyle="bold"
                    android:textColor="#ff1122"
                    android:textSize="20sp"
                    android:text="20000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnDone"
                android:textStyle="bold"
                android:textColor="#fff"
                android:background="@drawable/button_hover"
                android:text="Hoàn tất mua hàng "
                android:layout_width="300dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>