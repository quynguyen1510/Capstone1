<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_marginTop="100dp"
        android:textSize="30sp"
        android:textColor="#ff11"
        android:textStyle="bold"
        android:gravity="center"
        android:id="@+id/txtConfirmOrder"
        android:text="XÁC THỰC NHẬN HÀNG "
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_below="@id/txtConfirmOrder"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edtConfirmIdOrder"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/row_conner"
            android:hint="Nhập mã hóa đơn"
            android:textColorHint="#090909"
            android:textAlignment="center"
            android:layout_width="200dp"
            android:layout_height="50dp" />
        <Button
            android:id="@+id/btnConfirmGetOrder"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_hover"
            android:text="Xác thực nhận hàng"
            android:textColor="#ffff"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_width="200dp"
            android:layout_height="50dp" />
    </LinearLayout>
</RelativeLayout>